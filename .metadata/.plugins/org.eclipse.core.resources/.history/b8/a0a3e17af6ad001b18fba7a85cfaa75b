package methods;

public class Main {
	
	public static void sayiBulma()
	{
		int[] sayilar = {1,2,5,7,9,0};
		int aranacak = 5;
		boolean varMi = false;
		for(int gecici : sayilar)
		{
			if(aranacak == gecici)
			{
				varMi=true;
				break;
			}			
			
		}
		if(varMi) 
		{
			mesajVer(aranacak);
		}
		else
		{
			System.out.println("Sayý mevcut deðildir:");
		}
		
	}
	public static void mesajVer(int aranacak)
	{
		System.out.println("Sayý mevcuttur: " + aranacak);
	}
	public static void main(String[] args) 
	{
		
		sayiBulma();
		sayiBulma();

	}
	

}
