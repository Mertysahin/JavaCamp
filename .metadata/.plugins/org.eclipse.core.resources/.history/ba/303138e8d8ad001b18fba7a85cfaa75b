package stringsDemo;

public class main {

	public static void main(String[] args)
	{
		String mesaj = "Bugün hava çok güzel.";
		System.out.println(mesaj);
		
		/*
		 * System.out.println("Eleman sayýsý : " + mesaj.length());
		 * System.out.println("5.elman : " + mesaj.charAt(4)); //0.indexten baþlýyor
		 * System.out.println(mesaj.concat(" Yaþasýn!")); //birleþtirme
		 * System.out.println(mesaj.startsWith("A")); //B ile baþlýyorsa true döndürür;
		 * System.out.println(mesaj.endsWith("."));
		 * 
		 * char[] karakterler = new char [5]; mesaj.getChars(0, 5, karakterler, 0);
		 * //karakterleri-alýr System.out.println(karakterler);
		 * 
		 * System.out.println(mesaj.indexOf('a')); //karekterin ilk bulunduðu yerdeki
		 * indexi verir System.out.println(mesaj.lastIndexOf('a')); //aramaya saðdan
		 * baþlar, ilk gelenin bilgisini verir
		 */
		String yeniMesaj = mesaj.replace(' ','-');
		System.out.println(yeniMesaj);
		System.out.println(mesaj.replace(' ','-' ));
		System.out.println(mesaj.substring(2,4)); //4. indexi hesaba katmaz
		
		for(String kelime: mesaj.split(" "))
		{
			System.out.println(kelime);
		}
		
	}

}
